   "source": [
    "n = int(input(\"Enter the number of rows: \"))\n",
    "\n",
    "k = (2 * n) - 2\n",
    "\n",
    "for i in range(n):\n",
    "\n",
    "    for j in range(k):\n",
    "        print(\"\", end=\" \")\n",
    "\n",
    "    for j in range(i + 1):\n",
    "        print(\"*\", end=\" \")\n",
    "\n",
    "    print(\"\")\n",
    "\n",
    "    k = k - 2"
   ]
  }
